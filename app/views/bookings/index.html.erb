<div class="display-cards">
  <h2 id="bookings-header">My bookings</h2>
  <h3 id="pending-header"> > Pending Offers <%= "(#{@bookings.count})" %> </h3>
  <div class="cards">
    <% @bookings.each do |booking| %>
      <div class="card-vinyl" >
        <%= image_tag booking.offer.vinyl.img_url %>
        <div class="card-vinyl-infos">
          <div>
            <h2> <%= booking.offer.vinyl.name %> </h2>
            <p> <em> <%= booking.status %> </em> </p>
            <%= "#{booking.start_date.to_time.strftime('%B %e')} - "%>
            <%= booking.end_date.to_time.strftime('%B %e') %>
          </div>
          <h2 class="card-vinyl-pricing"> <%= "$ #{booking.offer.price}" %> </h2>
        </div>
      </div>
    <% end %>
  </div>
  <h3 id="pending-header"> > Confirmed Offers (0) </h3>
  <h3 id="pending-header"> > Completed (0) </h3>
</div>
